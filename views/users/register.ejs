<% layout('layouts/boilerplate') %>
<% layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center m-3 vw-100">
    <div class="row">
        <div class="col-md-8 offset-md-2 col-xl-4 offset-xl-4">
            <div class="card">
                <img src="https://images.unsplash.com/photo-1508175800969-525c72a047dd?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mjl8fHdhbGwlMjBlfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
                    class="card-img-top " alt="login picture">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <div class="card-text">
                        <form class="row g-3 needs-validation" action="/users/register" method="POST" novalidate>
                            <div class="mt-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mt-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mt-3">
                                <label for="password" class="form-label">password</label>
                                <input type="password" class="form-control" id="password" name="password"
                                    pattern="^(?=.*[0-9])[a-zA-Z0-9!@#$%^&*]{6,16}$" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class="btn btn-primary" type="submit">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>